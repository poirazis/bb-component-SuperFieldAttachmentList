      },
      {
        "type": "text",
        "label": "Label",
        "key": "label"
      },
      {
        "type": "text",
        "label": "Placeholder",
        "key": "placeholder"
      },
      {
        "type": "text",
        "label": "Help text",
        "key": "helpText"
      },
      {
        "type": "validation/string",
