    "styles": ["size"],
    "icon": "Link",
    "requiredAncestors": ["form"],
    "context": [
      {
        "type": "static",
        "values": [
          {
            "label": "Value",
            "key": "value",
            "type": "string"
          }
        ]
      }
    ],
    "settings": [
      {
        "type": "field/attachment",
        "label": "Field",
        "key": "field",
