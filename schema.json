        "key": "validation"
      },
      {
        "type": "select",
        "label": "Control Type",
        "key": "controlType",
        "defaultValue": "select",
        "options": [
          { "label": "Select", "value": "select" },
          { "label": "File List", "value": "list" },
          { "label": "Grid", "value": "grid" },
          { "label": "Carousel", "value": "carousel" },
          { "label": "Slider", "value": "slider" }
        ]
      },
      {
        "type": "number",
        "label": "Grid Columns",
        "key": "gridColumns",
        "defaultValue": 4,
        "min": 1,
        "max": 12,
        "dependsOn": {
          "setting": "controlType",
          "value": ["grid"]
        }
      },
      {
        "type": "select",
        "label": "Image Ratio",
        "key": "imageRatio",
        "defaultValue": "landscape",
