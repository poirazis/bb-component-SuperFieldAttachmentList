        "options": [
          { "label": "Landscape", "value": "landscape" },
          { "label": "Square", "value": "square" },
          { "label": "Portrait", "value": "portrait" },
          { "label": "Original", "value": "original" }
        ]
      },
      {
        "type": "select",
        "key": "onClickAction",
        "label": "On Click",
        "defaultValue": "view",
