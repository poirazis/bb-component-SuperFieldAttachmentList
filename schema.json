      },
      {
        "type": "boolean",
        "label": "Grab Focus",
        "key": "autofocus",
        "defaultValue": false
      },
      {
        "type": "boolean",
        "label": "Disabled",
        "key": "disabled",
        "defaultValue": false
      },
      {
        "type": "boolean",
        "label": "Read only",
        "key": "readonly",
        "defaultValue": false,
        "dependsOn": {
          "setting": "disabled",
          "value": true,
          "invert": true
        }
      },

      {
        "type": "boolean",
        "key": "showIcon",
        "label": "Add Inline Icon"
      },
      {
        "type": "icon",
        "key": "icon",
        "label": "Icon",
        "resetOn": "showIcon",
        "dependsOn": "showIcon"
      },
      {
        "type": "boolean",
        "key": "customButtons",
        "label": "Add Buttons"
      },
      {
        "type": "buttonConfiguration",
        "key": "buttons",
        "nested": true,
        "dependsOn": "customButtons"
      },
      {
        "section": true,
        "name": "Slider Settings",
        "collapsed": true,
        "dependsOn": {
          "setting": "controlType",
          "value": "slider"
        },
        "settings": [
          {
            "type": "number",
            "label": "Slides to show",
            "key": "carouselItemsToShow",
            "defaultValue": 1,
            "min": 1,
            "max": 12
          },
          {
            "type": "number",
            "label": "Slides to scroll",
            "key": "carouselItemsToScroll",
            "defaultValue": 1,
            "min": 1,
            "max": 12
          },
          {
            "type": "boolean",
            "label": "Nav Arrows",
            "key": "carouselArrows",
            "defaultValue": true
          },
          {
            "type": "boolean",
            "label": "Position dots",
            "key": "carouselDots",
            "defaultValue": false
          }
        ]
      },
      {
        "section": true,
        "name": "Events",
        "collapsed": true,
        "settings": [
          {
            "type": "event",
            "label": "On change",
            "key": "onChange",
            "context": [
              {
                "label": "Field Value",
                "key": "value"
              }
            ]
          }
        ]
      },
      {
        "tag": "style",
        "type": "select",
        "key": "role",
        "label": "Field Mode",
        "defaultValue": "formInput",
        "options": [
          { "label": "Form Input", "value": "formInput" },
          { "label": "Inline Input", "value": "inlineInput" }
        ]
      },
      {
        "tag": "style",
        "type": "select",
        "label": "Label Position",
        "key": "labelPosition",
        "showInBar": true,
        "barStyle": "buttons",
        "options": [
          {
            "label": "Auto",
            "value": false,
            "barIcon": "Group",
            "barTitle": "Field Group"
          },
          {
            "label": "Above",
            "value": "above",
            "barIcon": "MarginTop",
            "barTitle": "Above"
          },
          {
            "label": "Left",
            "value": "left",
            "barIcon": "MarginLeft",
            "barTitle": "Left"
          }
        ]
      },
      {
        "tag": "style",
        "type": "number",
        "label": "Size",
        "key": "span",
        "defaultValue": 6,
        "min": 2
      }
    ]
  }
}
